# http://stackoverflow.com/a/17545247
unbind-key C-b
set -g prefix m-a # Prefix : Alt + a
bind-key C-a send-prefix

setw -g xterm-keys on # ctrl + left/right keys work right

setw -g mode-mouse on
set -g mouse-resize-pane on
set -g mouse-select-pane on
set -g mouse-select-window on

